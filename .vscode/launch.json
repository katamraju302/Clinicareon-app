{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Vite: Dev + Debug",
      "configurations": ["Vite Dev Server", "Vite + Chrome Debug"]
    }
  ],
  "configurations": [
    {
      "name": "Vite Dev Server",
      "type": "node-terminal",
      "command": "npm run dev",
      "request": "launch",
    },
    {
      "name": "Vite + Chrome Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src"
    }
  ]
}
